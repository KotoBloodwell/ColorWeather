<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/bg_gradient_blue">


    <TextView
        android:id="@+id/txtTitleDaily"
        style="@style/MainFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        tools:text="Monday" />

    <TextView
        style="@style/MainFont"
        android:textSize="18dp"
        android:id="@+id/txtDescriptionDaily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:text="Party Cloudy in the morning"/>

    <TextView
        style="@style/MainFont"
        android:textSize="18dp"
        android:id="@+id/txtProbabilityDaily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:text="Rain:Probability: 24%"/>
</LinearLayout>